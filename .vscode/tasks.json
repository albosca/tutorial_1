{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run CMake (cortex-debug only)",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "cmake",
			"args": [
				"-Bbuild-Debug/nucleo_stm32f446re",
				"-DPLATFORM=nucleo_stm32f446re",
				"-DCMAKE_BUILD_TYPE=Debug",
			],
			"windows": {
				"args": [
					"-Bbuild-Debug/nucleo_stm32f446re",
					"-DPLATFORM=nucleo_stm32f446re",
					"-DCMAKE_BUILD_TYPE=Debug",
					"-G \"MinGW Makefiles\"",
				]
			}
		},
		{
			"label": "Build (cortex-debug only)",
			"dependsOn": [
				"Run CMake (cortex-debug only)"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"command": "make",
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"-Cbuild-Debug/nucleo_stm32f446re",
				"${input:cortexTargetID}",
			]
		},
		{
			"label": "Run CMake",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"command": "cmake",
			"args": [
				"-Bbuild-${input:buildType}/${input:platformID}",
				"-DPLATFORM=${input:platformID}",
				"-DCMAKE_BUILD_TYPE=${input:buildType}",
			],
			"windows": {
				"args": [
					"-Bbuild-${input:buildType}/${input:platformID}",
					"-DPLATFORM=${input:platformID}",
					"-DCMAKE_BUILD_TYPE=${input:buildType}",
					"-G \"MinGW Makefiles\"",
				]
			}
		},
		{
			"label": "Build",
			"dependsOn": [
				"Run CMake"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"command": "make",
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"-Cbuild-${input:buildType}/${input:platformID}",
				"${input:targetID}",
			]
		},
		{
			"label": "Flash",
			"dependsOn": [
				"Build"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"command": "make",
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"-Cbuild-${input:buildType}/${input:platformID}",
				"${input:targetID}-flash",
			]
		},
		{
			"label": "Run Tests",
			"dependsOn": [
				"Build"
			],
			"options": {
				"cwd": "${workspaceRoot}",
				"${input:platformID}": "native"
			},
			"group": {
				"kind": "test"
			},
			"command": "ctest",
			"args": [
				"--test-dir",
				"build-${input:buildType}/${input:platformID}",
				"--output-on-failure",
			]
		}
	],
	"inputs": [
		{
			"id": "platformID",
			"type": "pickString",
			"description": "Enter the platform:",
			"default": "native",
			"options": [
				"native",
				"nucleo_stm32f446re"
			]
		},
		{
			"id": "targetID",
			"type": "promptString",
			"description": "Enter the target:",
			"default": "all"
		},
		{
			"id": "buildType",
			"type": "pickString",
			"description": "Enter the build type:",
			"default": "Debug",
			"options": [
				"Debug",
				"Release"
			]
		},
		{
			"id": "cortexTargetID",
			"type": "command",
			"command": "extension.commandvariable.rememberPick",
      		"args": { "key": "lasttarget" }
		},
	]
}
