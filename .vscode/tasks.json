{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run CMake",
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			//"command": "cmake",
			"linux": {
				"command": "cmake"
			},
			"osx": {
				"command": "cmake"
			},
			"windows": {
				"command": "cmake",
				"args": [
					"-Bbuild/${input:platformID}",
					"-DPLATFORM=${input:platformID}",
					"-DCMAKE_BUILD_TYPE=${input:buildType}",
					"-G \"MinGW Makefiles\"",
				]
			},
			"args": [
				"-Bbuild/${input:platformID}",
				"-DPLATFORM=${input:platformID}",
				"-DCMAKE_BUILD_TYPE=${input:buildType}",
			]
		},
		{
			"label": "Build",
			"dependsOn": [
				//"Run CMake"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"linux": {
				"command": "make"
			},
			"osx": {
				"command": "make"
			},
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"-Cbuild/${input:platformID}",
				"${input:targetID}",
			]
		},
		{
			"label": "Flash",
			"dependsOn": [
				"Run CMake"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"group": {
				"kind": "build"
			},
			"linux": {
				"command": "make"
			},
			"osx": {
				"command": "make"
			},
			"windows": {
				"command": "mingw32-make"
			},
			"args": [
				"-Cbuild/${input:platformID}",
				"${input:targetID}-flash",
			]
		},
		{
			"label": "Run Tests",
			"dependsOn": [
				"Run CMake"
			],
			"options": {
				"cwd": "${workspaceRoot}",
				"${input:platformID}": "native"
			},
			"group": {
				"kind": "test"
			},
			"command": "ctest",
			"args": [
				"--test-dir",
				"build/${input:platformID}",
				"--output-on-failure",
			]
		}
	],
	"inputs": [
		{
			"id": "platformID",
			"type": "pickString",
			"description": "Enter the platform:",
			"default": "native",
			"options": [
				"native",
				"nucleo_stm32f446re"
			]
		},
		{
			"id": "targetID",
			"type": "promptString",
			"description": "Enter the target:",
			"default": "all"
		},
		{
			"id": "buildType",
			"type": "pickString",
			"description": "Enter the build type:",
			"default": "Debug",
			"options": [
				"Debug",
				"Release"
			]
		}
	]
}
